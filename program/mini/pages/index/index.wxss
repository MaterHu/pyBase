/* 页面容器：内容垂直居中 + 顶部留白 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 300rpx; /* 内容上移 */
  min-height: 100vh;
  box-sizing: border-box;
}

/* 标题：更大、更粗、渐变（可选） */
.title {
  font-size: 60rpx;
  font-weight: bold;
  color: #5F8FBF;
  margin-bottom: 80rpx;
}

/* 按钮组：居中 + 限制宽度 */
.btn-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  max-width: 400rpx;
  gap: 30rpx;
}

/* 按钮：固定尺寸 + 强制一致 */
.btn {
  background-color: #88B66A;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  width: 280rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0;
  border-radius: 10rpx;
  border: none;
}

/* 按钮按压反馈 */
.btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 底部文字：加大字号 */
.footer {
  position: fixed;
  bottom: 30rpx;
  font-size: 28rpx;
  color: #999;
}